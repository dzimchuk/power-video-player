                                                        <Path Style="{StaticResource ArrowStyle}" >
                                                            <Path.RenderTransform>
                                                                <RotateTransform Angle="45"/>
                                                            </Path.RenderTransform>
                                                        </Path>
                                                    </Button>

                                                    <Button x:Name="PART_PauseButton" Style="{StaticResource MainButtonStyle}">
